rp: The x-value at which to interpolate.\n","\n","  Returns:\n","    The interpolated y-value.\n","  \"\"\"\n","\n","  n = len(x)\n","  p = coeffs[0, 0]\n","  term = 1\n","  for j in range(1, n):\n","    term *= (x_interp - x[j - 1])\n","    p += term * coeffs[0, j]\n","  return p\n"],"metadata":{"id":"sEKPOjL-v3of","executionInfo":{"status":"ok","timestamp":1721724192982,"user_tz":-180,"elapsed":5,"user":{"displayName":"Watene Keguti","userId":"00003334493310483030"}}},"execution_count":5,"outputs":[]},{"cell_type":"code","source":["\n","#Example Usage\n","\n","\n","x = np.array([1, 2, 3, 4])\n","y = np.array([1, 4, 9, 16])\n","x_interp = 2.5\n","\n","\n","lagrange_result = lagrange_interpolation(x, y, x_interp)\n","print(\"Lagrange interpolation:\", lagrange_result)\n","\n","coeffs = divided_difference(x, y)\n","newton_result = newton_interpolation(x, coeffs, x_interp)\n","print(\"Newton interpolation:\", newton_result)\n"],"metadata":{"colab":{"base_uri":"https://localhost:8080/"},"id":"QfDAawZDwAEn","executionInfo":{"status":"ok","timestamp":1721724205060,"user_tz":-180,"elapsed":464,"user":{"displayName":"Watene Keguti","userId":"00003334493310483030"}},"outputId":"5dae14fe-d289-46fc-836e-2f697dd3fb77"},"execution_count":7,"outputs":[{"output_type":"stream","name":"stdout","text":["Lagrange interpolation: 6.25\n","Newton interpolation: 6.25\n"]}]}]}